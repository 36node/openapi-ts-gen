{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"commonjs",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "sourceMap": false,
    "declarationMap": false,
    "outDir": "dist/lib"
  },
  "include": [
    "src"
  ]
}
